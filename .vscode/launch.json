  "version": "0.2.0",
  "configurations": [
    {
        "name": "Python: Django runserver",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/mysite/manage.py",
        "args": [
            "runserver",
            // "--noreload",
            // "--nothreading",
            "0:8000"
        ],
        "django": true
    },
    {
      "name": "Python: Django Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/mysite/manage.py",
      // "module": "django-admin",
      // "env": {
      //   "TEST_RUNNER": "django.test.runner.DiscoverRunner"
      // },
      "args": [
          "test",
          // one or more apps can be passed as list items
          "polls",
          // "django.contrib.admin"
      ],
      "django": true
    },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
          {
              "localRoot": "${workspaceFolder}/mysite",
              "remoteRoot": "/workspace"
          }
      ]
    }    
  ]
}